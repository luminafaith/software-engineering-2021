<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AdminMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/account_logo"
            android:elevation="5dp"
            android:layout_margin="10dp"
            tools:ignore="UsingOnClickInXml" />

        <TextView
            android:id="@+id/Admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Admin"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/branchReg"
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:backgroundTint="#B1EFCE"
            android:text="View Branch Accounts"
            android:textColor="#000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/customerReg"
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:backgroundTint="#B1EFCE"
            android:text="@string/view_customer_accounts"
            android:textColor="#000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Services"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/services"
                android:textSize="20dp" />

            <Button
                android:id="@+id/refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#B1EFCE"

                android:text="@string/refresh"

                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/addService"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:backgroundTint="#B1EFCE"
                android:elevation="2dp"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:scaleType="fitCenter"

                android:src="@drawable/plus_sign" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listViewServices"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>